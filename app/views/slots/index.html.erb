<div class="container my-5">
  <h1>Your available slots:</h1>
    <div class="my-3 d-flex flex-wrap" id="slots-list">
     <%= render @slots %>
    </div>
  <div id="new-slot">
    <%= link_to "Create a Slot", new_slot_path, remote: true, class: "btn btn-outline-secondary" %>
  </div>
  <div class="my-3">
    <h1> Your next classes:</h1>
      <%= month_calendar(events: @bookings) do |date, meetings| %>
        <%= date.day %>
        <% meetings.each do |meeting| %>
            <div style="width: 18rem;">
              <div class="cancel-fade">
                <h6 class="btn btn-outline-secondary my-1">
                  <%= meeting.start_time.strftime("%H:%M") %>  - <%= meeting.duration%> mins <br>
                  <%= link_to 'Cancel this booking', booking_cancel_path(meeting), method: :patch, data: { remote: true }, class: "cancel" %>
                </h6>
              </div>
            </div>
        <% end %>
      <% end %>
  </div>
</div>