<div class="container my-5">
  <h1>Edit existing profile information</h1>
  <%= simple_form_for @teacher do |f| %>
    <%= f.simple_fields_for :user do |user| %>
      <%= user.input :full_name, input_html: { value: current_user.full_name } %>
    <% end %>
    <%= f.input :description, label: "Enter your new description here" %>
    <%= f.input :address, label: "Enter your new address here" %>
    <%= f.input :price, label: "Enter your new price here" %>
    <%= f.input :photo, as: :file, label: "Upload a new photo to illustrate your class style" %>
    <%= f.submit %>
  <% end %>
</div>